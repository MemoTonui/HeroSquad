{{#partial "content"}}
   {{#if squads }}
       {{#each squads }}
       <div class="row">
   <div class="card  col-sm-3" style="max-width: 15rem;">
  <div class="card-header">{{ squadName }}</div>
  <div class="card-body">
    <h5 class="card-title">We fight for {{ description }}</h5>
    <p class="badge badge-info">Maximum Size is: {{ maxSize }}</p>
  </div>
</div>
</div>
   </div>
{{/each }}
{{else}}
<div class="alert alert-warning">
    <p >No Squads Created :(.....Please make us some Heroes..</p>
    <a style="color:black" href="/form">Create a Hero Squad.</a>
</div>

   {{/if}}
{{/partial}}

