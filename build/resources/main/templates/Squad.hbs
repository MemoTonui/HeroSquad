{{#partial "content"}}




   {{#if squads }}
       
       <div class="content">
    <h3>Here are your heros!!</h3><hr>
    <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID </th>
      <th scope="col"> Squad Name </th>
      <th scope="col">Maximum Size</th>
      <th scope="col"> Cause </th>
      <th scope="col">Squad Heroes</th>
    </tr>
  </thead>
  <tbody>
      {{#each squads }}
    <tr>
      <th scope="row"> {{id}} </th>
      <td> {{squadName}} </td>
      <td> {{maxSize}} </td>
      <td> {{description}} </td>
      <td>
      {{#if heroes}}
          {{each heroes }}
      <td>{{heroName}}</td>
      {{/if}}
        <button class="btn btn-info" style="font-size:10px" ><a href="/Heroform">ADD HERO</a></button></td>
    </tr>
       {{/each }}
  </tbody>
</table>

       </div>
  </div>
</div>
</div>
   


{{else}}
<div class="alert alert-warning">
    <p >No Squads Created :(.....Please make us some Heroes..</p>
    <a style="color:black" href="/form">Create a Hero Squad.</a>
</div>

   {{/if}}
{{/partial}}

