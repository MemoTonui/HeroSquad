{{#partial "title" }}


{{/partial}}

{{#partial "content"}}
    {{#if heroes }}
        {{#each heroes }}

            <div class="card  col-sm-3" style="max-width: 15rem;">
                <div class="card-header">{{ heroName }}</div>
                <div class="card-body">
                    <h5 class="card-title">{{superPower }}</h5>
                    <p class="badge badge-info">{{age}}</p>
                </div>
            </div>
            </div>

        {{/each }}
    {{else}}
        <div class="alert alert-info">
            <p>You Have not added any heroes .</p>
            <p>Click <a style="color:black" href="/Heroform">Here</a> to add heroes</p>
        </div>

    {{/if}}
{{/partial}}

{{> layout.hbs}}